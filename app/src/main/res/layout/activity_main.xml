<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/intro_background_forest" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/arizonia"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Welcome To The Jungle"
        android:textColor="#64D501"
        android:textSize="80dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="398dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-40dp"
        android:translationZ="10dp"
        app:srcCompat="@drawable/intro_front_leaves" />

    <Button
        android:id="@+id/button2"
        android:layout_width="175dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/intro_start_button"
        android:elevation="0dp"
        android:fontFamily="@font/arizonia"
        android:onClick="startAnimals"
        android:text="Enter"
        android:textAllCaps="false"
        android:textColor="#FFE500"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>





